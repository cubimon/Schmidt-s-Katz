{
  "manifest_version": 2,
  "name": "Schmidt's Katz",
  "version": "1.0",
  "description": "control media with shortcuts",
  "icons": {
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": "icons/icon128.png",
    "default_title": "Schmidt's Katz",
    "default_popup": "popup/popup.html"
  },
  "applications": {
    "gecko": {
      "id": "schmidts_katz@cubimon.org"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "commands": {
    "play-pause": {
      "suggested_key": {
        "default": "Ctrl+Alt+D"
      },
      "description": "Toggle play/pause"
    },
    "stop": {
      "suggested_key": {
        "default": "Ctrl+Alt+C"
      },
      "description": "Stop all players"
    },
    "backward": {
      "suggested_key": {
        "default": "Ctrl+Alt+S"
      },
      "description": "Seek backwards"
    },
    "forward": {
      "suggested_key": {
        "default": "Ctrl+Alt+F"
      },
      "description": "Seek forward"
    },
    "play-prev": {
      "suggested_key": {
        "default": "Ctrl+Alt+A"
      },
      "description": "Play previous track"
    },
    "play-next": {
      "suggested_key": {
        "default": "Ctrl+Alt+G"
      },
      "description": "Play next track"
    },
    "toggle-mute": {
      "suggested_key": {
        "default": "Ctrl+Alt+E"
      },
      "description": "Toggle mute"
    },
    "volume-down": {
      "suggested_key": {
        "default": "Ctrl+Alt+W"
      },
      "description": "Decrease volume"
    },
    "volume-up": {
      "suggested_key": {
        "default": "Ctrl+Alt+R"
      },
      "description": "Increase volume"
    },
    "playback-rate-decrease": {
      "suggested_key": {
        "default": "Ctrl+Alt+Y"
      },
      "description": "Decrease playback speed"
    },
    "playback-rate-increase": {
      "suggested_key": {
        "default": "Ctrl+Alt+B"
      },
      "description": "Increases playback speed"
    },
    "like": {
      "suggested_key": {
        "default": "Ctrl+Alt+V"
      },
      "description": "Toggle like"
    },
    "dislike": {
      "suggested_key": {
        "default": "Ctrl+Alt+X"
      },
      "description": "Toggle dislike"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": [
        "abstract_controller.js",
        "controller/youtube_controller.js"
      ]
    },
    {
      "matches": ["*://music.youtube.com/*"],
      "js": [
        "abstract_controller.js",
        "controller/youtube_music_controller.js"
      ]
    },
    {
      "matches": ["*://www.twitch.tv/*"],
      "js": [
        "abstract_controller.js",
        "controller/twitch_controller.js"
      ]
    },
    {
      "matches": ["*://www.twitch.tv/videos/*"],
      "js": [
        "code_patcher.js",
        "patches/twitch_patch.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": ["*://soundcloud.com/*"],
      "js": [
        "code_patcher.js",
        "patches/soundcloud_patch.js",
        "media_interceptor.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": ["*://soundcloud.com/*"],
      "js": [
        "abstract_controller.js",
        "controller/soundcloud_controller.js"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "nativeMessaging"
  ]
}
